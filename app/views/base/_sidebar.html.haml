- if current_user
  %aside.main-sidebar.sidebar-light-info.elevation-4
    / Brand Logo
    %a.brand-link.navbar-info{href: "/"}
      %img.brand-image.img-circle.elevation-3{ alt: "",
                                               style: "opacity: .8" }
        %span.brand-text.font-weight-light User Auth Demo
      / Sidebar
    .sidebar
      / Sidebar user (optional)
      .user-panel.mt-3.pb-3.mb-3.d-flex
        .image
          -#%img.img-circle.elevation-2{ alt:  "User Image", src: user_avatar(current_user)}
        .info
          %a.d-block{:href => "/my-profile"} #{current_user['name']}
      / Sidebar Menu
      %nav.mt-2
        %ul.nav.nav-pills.nav-sidebar.flex-column{"data-accordion": "false", "data-widget": "treeview", role: "menu"}
          /
            Add icons to the links using the .nav-icon class
            with font-awesome or any other icon font library
          %li.nav-item.has-treeview
            %a.nav-link{href: "/", class: active_class('/')}
              %i.nav-icon.fas.fa-tachometer-alt
              %p
                Dashboard
          - if current_user.superadmin_role?
            %li.nav-item
              %a.nav-link{href: super_admins_path, class: is_active_link?(super_admins_path, :inclusive) ? 'active' : ''}
                %i.fas.fa-building
                %p
                  Super Admin Users
          - if current_user.superadmin_role? || current_user.admin_role?
            %li.nav-item
              %a.nav-link{href: admins_path, class: is_active_link?(admins_path, :inclusive) ? 'active' : ''}
                %i.fas.fa-building
                %p
                  Admin Users
          - if can? :manage, User
            %li.nav-item
              %a.nav-link{href: supervisors_path, class: is_active_link?(supervisors_path, :inclusive) ? 'active' : ''}
                %i.fas.fa-building
                %p
                  Supervisor Users
          - if can? :manage, User
