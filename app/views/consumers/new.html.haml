%section.content-header
  .container-fluid
    .row.mb-2
      .col-sm-6
        %h1 New Consumer
      .col-sm-6
        %ol.breadcrumb.float-sm-right
          %li.breadcrumb-item
            %a{:href => "/"} Home
          %li.breadcrumb-item
            %a{:href => "/consumers"} Consumer Users
          %li.breadcrumb-item.active
            New Consumer
%section.content
  .container-fluid
    .row
      .col-md-8
        .card.card-primary
          .card-header
            %h3.card-title New Consumer User
          = form_with scope: :user, url: consumers_path, method: :post, class: 'admin-form remote-form' do |f|
            .card-body
              .form-group
                %label Name
                %span.text-red *
                =f.text_field :full_name, placeholder: 'Name', class: 'form-control', value: @consumer.full_name
              .form-group
                %label Email
                %span.text-red *
                =f.text_field :email, placeholder: 'Email', class: 'form-control', type: 'email', value: @consumer.email
                = f.hidden_field :consumer_role, value: true
                = f.hidden_field :password, value: "123456"
            .card-footer
              = f.button 'Submit', class: 'btn btn-info',
                          data: { disable_with: "<i class='fas fa-spinner fa-spin'></i> Submiting..."}
              = link_to 'Cancel', consumers_path, class: 'btn btn-default'
